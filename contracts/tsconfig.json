{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["./scripts", "./test", "./hardhat.config.ts", "./typechain-types"],
  "exclude": ["node_modules"]
}
