{
  "name": "paywave",
  "version": "1.0.0",
  "private": true,
  "description": "Confidential On-chain Payroll MVP using Zama FHEVM",
  "workspaces": {
    "packages": [
      "contracts",
      "frontend"
    ],
    "nohoist": [
      "contracts/@fhevm/**",
      "contracts/encrypted-types",
      "contracts/encrypted-types/**"
    ]
  },
  "scripts": {
    "contracts:compile": "yarn workspace paywave-contracts compile",
    "contracts:test": "yarn workspace paywave-contracts test",
    "contracts:deploy": "yarn workspace paywave-contracts deploy",
    "frontend:dev": "yarn workspace paywave-frontend dev",
    "frontend:build": "yarn workspace paywave-frontend build",
    "dev": "yarn frontend:dev",
    "test": "yarn contracts:test"
  },
  "keywords": [
    "fhevm",
    "payroll",
    "confidential",
    "blockchain"
  ],
  "license": "MIT",
  "devDependencies": {}
}
